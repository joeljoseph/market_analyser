<p id="notice"><%= notice %></p>

<h1>Commodities</h1>

<table>
  <thead>
    <tr>
      <th>Sl.No</th>
      <th>Name</th>
      <th>Date</th>
      <th>Price</th>
      <!-- <th></th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commodities.each_with_index do |commodity, index| %>
      <tr>
        <td><%= index + 1 %> </td>
        <td><%= commodity.name %></td>
        <td><%= commodity.date %></td>
        <td><%= number_to_currency_rs(commodity.price) %></td>
        <!-- <td><%= commodity.category %></td> -->
        <td><%= link_to 'Show', commodity %></td>
        <td><%#= link_to 'Edit', edit_commodity_path(commodity) %></td>
        <td><%#= link_to 'Destroy', commodity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Commodity', new_commodity_path %>

<%= paginate @commodities %>