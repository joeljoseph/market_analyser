require 'nokogiri'
require 'open-uri'
months = Date::MONTHNAMES.compact.map {|m| m.downcase}
years  = 2009..2019.to_a
current_month = 'october'
doc = Nokogiri::HTML(open("https://www.keralagold.com/daily-gold-prices-#{current_month}-2009.htm"))
doc.css('div#content_area div#content_left table tr td').each do |td|
   #puts td.content.to_s if td.content =~ /next/i && td.content
   puts td.content.to_s if (td.content.present? && !(td.content =~ /date|price|previous|next/i))
end


doc.css('div#content_area div#content_left table tr td').select {|td|  td.content.to_s if (td.content.present? && !(td.content =~ /date|price|previous|next/i))}